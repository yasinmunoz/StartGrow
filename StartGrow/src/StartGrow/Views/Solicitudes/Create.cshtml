@model StartGrow.Models.SolicitudViewModels.SolicitudesCreateViewModel

@{
    ViewData["Title"] = "Create"; 
}

<h2>Create</h2>

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <h4>Solicitud</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FirstSurname)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstSurname)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SecondSurname)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SecondSurname)
            </dd>
        </dl>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <table class="table">
        <thead>
            <tr>
                <th width="50%">
                    Nombre Proyecto
                </th>
                <th width="20%">
                    Estado Solicitud
                </th>
                <th>
                    Rating
                </th>
                <th>
                    Interes
                </th>
                <th>
                    Plazo de Amortización
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Solicitudes.Count() == 0)
            {
                <tr><td colspan="3">No hay proyectos disponibles</td></tr>
            }
            else
            {
                @for (int i = 0; i < Model.Solicitudes.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.Solicitudes.ElementAt(i).solicitud.Proyecto.Nombre)
                        </td>
                        <td>
                            <div class="form-group">
                                <select asp-for="Solicitudes[i].estados" asp-items="ViewBag.Estados">
                                    <option value=""></option>
                                </select>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <select asp-for="Solicitudes[i].rating" asp-items="ViewBag.Rating">
                                    <option value=""></option>
                                </select>
                            </div>
                        </td>
                        <td>
                            <input asp-for="Solicitudes[i].interes" size="25" type="number" step="0.1" />
                        </td>
                        <td>
                            <input asp-for="Solicitudes[i].plazo" size="25" type="number" />
                        </td>
                        <td>
                            <div class="form-group">
                                <input asp-for="Solicitudes[i].solicitud.Proyecto.FechaExpiracion" type="hidden" class="form-control" />
                                <input asp-for="Solicitudes[i].solicitud.Proyecto.ProyectoId" type ="hidden" class="form-control"/>
                                <input asp-for="Solicitudes[i].solicitud.ProyectoId" type="hidden" class="form-control" />
                                <input asp-for="Solicitudes[i].solicitud.Proyecto.Importe" type="hidden" class="form-control" />
                                <input asp-for="Solicitudes[i].solicitud.Proyecto.Nombre" type="hidden" class="form-control" />
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
